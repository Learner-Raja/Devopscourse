pipeline {
    agent { label "Ansible-Master-Server" }
    stages {
        stage ('Checkout') {
            steps {
                checkout scm
            }
        }

        stage ('Run Ansible') {
            steps {
                script {
                    sh 'sudo -u ansible ansible-playbook /var/lib/jenkins/workspace/${JOB_NAME}/httpd.yml'
                }
            }
        }
        stage ("Deploy") {
            steps {
                sh "sudo cp /var/lib/jenkins/workspace/${JOB_NAME}/index.html /var/www/html/" 
            }
        }
    }
}


